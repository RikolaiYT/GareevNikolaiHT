<Window x:Class="MultithreadCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор - Многопоточность"
        Height="360" Width="720"
        Background="#1E1E1E"
        Foreground="#EEEEEE"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ввод значения -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="Ввести значение:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtValue" Width="120" Background="#2D2D30" Foreground="#FFFFFF" BorderBrush="#3E3E42" BorderThickness="1" Padding="4"/>
        </StackPanel>

        <!-- Кнопка запуска -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left">
            <Button x:Name="btnRunAll" Content="Выполнить все расчёты (многопоточно)" Width="280" Padding="6" Margin="0,0,0,0"
                    Background="#007ACC" Foreground="White" BorderThickness="0" FontWeight="Bold" 
                    Click="btnRunAll_Click" Cursor="Hand"/>
        </StackPanel>

        <!-- Основная панель с результатами -->
        <Grid Grid.Row="4" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка результатов -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" >
                <TextBlock Text="Факториал (varFact1):" FontWeight="Bold" Margin="0,0,0,2"/>
                <Label x:Name="lblFactorial1" Content="" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="4" MinHeight="28" Foreground="White"/>

                <TextBlock Text="Факториал - 1 (varFact2-1):" FontWeight="Bold" Margin="0,8,0,2"/>
                <Label x:Name="lblFactorial2" Content="" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="4" MinHeight="28" Foreground="White"/>

                <TextBlock Text="Прибавить два (varAddTwo+2):" FontWeight="Bold" Margin="0,8,0,2"/>
                <Label x:Name="lblAddTwo" Content="" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="4" MinHeight="28" Foreground="White"/>

                <TextBlock Text="Статус цикла:" FontWeight="Bold" Margin="0,8,0,2"/>
                <Label x:Name="lblRunLoops" Content="" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="4" MinHeight="28" Foreground="White"/>
            </StackPanel>

            <!-- Правая колонка статуса -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top">
                <TextBlock Text="Общее количество вычислений:" FontWeight="Bold" Margin="0,0,0,2"/>
                <Label x:Name="lblTotalCalculations" Content="" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="4" MinHeight="28" Foreground="White"/>

                <TextBlock Text="Общее время выполнения (мс):" FontWeight="Bold" Margin="0,8,0,2"/>
                <Label x:Name="lblLastElapsed" Content="" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" Padding="4" MinHeight="28" Foreground="White"/>


                <TextBlock FontStyle="Italic" Margin="0,12,0,0" Height="44">
                    <Run Text="Примечание: большие факториалы могут стать"/>
                    <LineBreak/>
                    <Run Text="' Infinity'."/>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
